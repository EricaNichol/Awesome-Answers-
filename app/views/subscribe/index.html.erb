<h1>Subscribe</h1>

<%= form_tag "/subscribe" do %>
<div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</div>
<div>
  <%= label_tag :last_name %>
  <%= text_field_tag :last_name %>
</div>
<div>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
</div>
  <%= submit_tag "Post" %>
  <% end %>
